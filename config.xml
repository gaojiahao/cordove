<?xml version='1.0' encoding='utf-8'?>
<widget id="com.refordom.roletask" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>roletask</name>
    <description>
        路塔流程，连接断点，业务单元流程端到端一体化
    </description>
    <author email="jeff.lin@roletask.com" href="http://refordom.com">
        深圳市瑞福登信息技术服务有限公司
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/roletask.png" />
        <icon density="mdpi" src="res/icon/android/roletask.png" />
        <icon density="hdpi" src="res/icon/android/roletask.png" />
        <icon density="xhdpi" src="res/icon/android/roletask.png" />
        <icon density="xxhdpi" src="res/icon/android/roletask.png" />

        <splash density="land-hdpi" src="res/splash/android/splash.png" />  
        <splash density="land-ldpi" src="res/splash/android/splash.png" />  
        <splash density="land-mdpi" src="res/splash/android/splash.png" />  
        <splash density="land-xhdpi" src="res/splash/android/splash.png" />  
        <splash density="port-hdpi" src="res/splash/android/splash.png" />  
        <splash density="port-ldpi" src="res/splash/android/splash.png" />  
        <splash density="port-mdpi" src="res/splash/android/splash.png" />  
        <splash density="port-xhdpi" src="res/splash/android/splash.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>